<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toyscartoons.NewPage1"
             Title="Add Doll">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*,Auto,Auto,Auto"  ColumnDefinitions="*,*,*" Padding="10" BackgroundColor="LavenderBlush">
        <Label Text="Введите артикул Куклы" Grid.Row="0" Grid.ColumnSpan="2" Margin="13,0,10,10"/>
        <Entry Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,20,0" Text="{Binding DollHere.Articul}"/>
        <Label Text="Введите название Куклы" Grid.Row="2" Grid.ColumnSpan="2" Margin="13,0,10,10"/>
        <Entry Grid.Row="3" Grid.ColumnSpan="2" Margin="10,0,20,0" Text="{Binding DollHere.Name}"/>
        <Label Text="Введите коллекцию Куклы" Grid.Row="4" Grid.ColumnSpan="2" Margin="13,0,10,10"/>
        <Entry Grid.Row="5" Grid.ColumnSpan="2" Margin="10,0,20,0" Text="{Binding DollHere.Collection}"/>
        <Label Text="Введите дату выпуска Куклы" Grid.Row="6" Grid.ColumnSpan="2" Margin="13,0,10,10"/>
        <DatePicker Grid.Row="7" Grid.ColumnSpan="2" Margin="10,0,20,0" Date="{Binding DollHere.PublichDate}"/>
        <Label Text="Введите описание Куклы" Grid.Row="8" Grid.ColumnSpan="2" Margin="13,0,10,10"/>
        <Entry Grid.Row="9" Grid.ColumnSpan="2" Margin="10,0,20,0" Text="{Binding DollHere.Description}"/>
        <Label Text="выберите сериал куклы" Grid.Row="10" Grid.ColumnSpan="2" Margin="13,0,10,10"/>
        <Picker Grid.Row="11" Grid.ColumnSpan="2" Margin="10,0,20,0" SelectedItem="{Binding DollHere.Cartoon}" ItemsSource="{Binding Cartoons}" ItemDisplayBinding="{Binding Titile}"/>
        <Button Grid.Row="12" Text="Save" Clicked="Save" FontSize="16" Margin="100,20,-150,0" BackgroundColor="LightPink"/>

        <Entry Grid.Row="14" Grid.ColumnSpan="1"  Margin="150,0,-100,0" Text="{Binding DeleteId}"/>
        
            <Button Grid.Row="15" Text="Delete" Clicked="Deleted" FontSize="16" Margin="100,20,-150,0" BackgroundColor="LightPink"/>
            <Button Grid.Row="16" Text="Update" Clicked="Update" FontSize="16" Margin="100,20,-150,0" BackgroundColor="LightPink"/>
        
       
        
         
        


        <ListView ItemsSource="{Binding Dolls}" Grid.Row="13" Grid.ColumnSpan="3" HasUnevenRows="True" Margin="0,30,0,0" HeightRequest="100">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Border Margin="10" Padding="15" BackgroundColor="MediumPurple"  >
                            <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" RowDefinitions="Auto, *,*">

                                <Label Text="Id:" Grid.Row="0" Grid.Column="0"/>
                                <Label Text="{Binding Id}" Grid.Row="1" Grid.Column="0"/>

                                <Label Text="Articul:" Grid.Row="0" Grid.Column="1"/>
                                <Label Text="{Binding Articul}" Grid.Row="1" Grid.Column="1"/>

                                <Label Text="Name:" Grid.Row="0" Grid.Column="2"/>
                                <Label Text="{Binding Name}" Grid.Row="1" Grid.Column="2"/>

                                <Label Text="Collection:" Grid.Row="0" Grid.Column="3"/>
                                <Label Text="{Binding Collection}" Grid.Row="1" Grid.Column="3"/>

                                <!--<Label Text="Date:" Grid.Row="0" Grid.Column="4"/>
                                <Label Text="{Binding PublichDate}" Grid.Row="1" Grid.Column="4"/>-->

                                <Label Text="Description:" Grid.Row="0" Grid.Column="4"/>
                                <Label Text="{Binding Description}" Grid.Row="1" Grid.Column="4"/>

                                <Label Text="Cartoon:" Grid.Row="0" Grid.Column="6"/>
                                <Label Text="{Binding Cartoon.Title}" Grid.Row="1" Grid.Column="6"/>



                            </Grid>
                        </Border>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    
</ContentPage>