<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toyscartoons.N3"
             Title="Add Cartoon">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*,Auto,Auto" ColumnDefinitions="*,*,*" Padding="10" BackgroundColor="White"    >
        <Label Text="Введите id мультсериала" Grid.Row="0 " Grid.ColumnSpan="1" Margin="13,0,10,10" FontSize="16"/>
        <Entry Grid.Row="1" Grid.ColumnSpan="1"  Margin="10,0,20,0" Text="{Binding RequestId}"/>
        <Button Grid.Row="2"  Text="Show" Clicked="Show" FontSize="16" Margin="100,20,-150,0" BackgroundColor="DarkOrange"/>

        <CollectionView ItemsSource="{Binding CartoonsShow}"
                       Grid.Row="3" Grid.ColumnSpan="3"
                       Margin="0,30,0,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Border Margin="10" 
                                Padding="15" 
                                BackgroundColor="GreenYellow">
                            <Grid ColumnDefinitions="Auto, Auto, Auto, *, *, Auto" 
                                  RowDefinitions="Auto, Auto">
                                <Label Text="Id:" Grid.Row="0" Grid.Column="0"/>
                                <Label Text="{Binding Id}" Grid.Row="1" Grid.Column="0"/>

                                <Label Text="Title:" Grid.Row="0" Grid.Column="1"/>
                                <Label Text="{Binding Title}" Grid.Row="1" Grid.Column="1"/>

                                <Label Text="Description:" Grid.Row="0" Grid.Column="2"/>
                                <Label Text="{Binding Description}" Grid.Row="1" Grid.Column="2"/>

                                <Label Text="Year Published:" Grid.Row="0" Grid.Column="3"/>
                                <Label Text="{Binding YearPublished}" Grid.Row="1" Grid.Column="3"/>

                                <Label Text="Genre:" Grid.Row="0" Grid.Column="4"/>
                                <Label Text="{Binding Genre}" Grid.Row="1" Grid.Column="4"/>

                                <Label Text="Author:" Grid.Row="0" Grid.Column="5"/>
                                <Label Text="{Binding Author}" Grid.Row="1" Grid.Column="5"/>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <Label Text="Введите id Куклы" Grid.Row="4 " Grid.ColumnSpan="1" Margin="13,0,10,10" FontSize="16"/>
        <Entry Grid.Row="5" Grid.ColumnSpan="1"  Margin="10,0,20,0" Text="{Binding RequestIdDoll}"/>
        <Button Grid.Row="6"  Text="Show" Clicked="ShowDoll" FontSize="16" Margin="100,20,-150,0" BackgroundColor="Plum"/>

                <CarouselView ItemsSource="{Binding DollsShow}"
                     Grid.Row="7" Grid.ColumnSpan="3"
                     Margin="0,30,0,0">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10" 
                            Padding="15" 
                            BackgroundColor="LightPink"
                            HeightRequest="200">
                                <Grid ColumnDefinitions="Auto, Auto, Auto, *, *, Auto" 
                              RowDefinitions="Auto, Auto">

                            <Label Text="Id:" Grid.Row="0" Grid.Column="0"/>
                            <Label Text="{Binding Id}" Grid.Row="1" Grid.Column="0"/>

                            <Label Text="Articul:" Grid.Row="0" Grid.Column="1"/>
                            <Label Text="{Binding Articul}" Grid.Row="1" Grid.Column="1"/>

                            <Label Text="Name:" Grid.Row="0" Grid.Column="2"/>
                            <Label Text="{Binding Name}" Grid.Row="1" Grid.Column="2"/>

                            <Label Text="Collection:" Grid.Row="0" Grid.Column="3"/>
                            <Label Text="{Binding Collection}" Grid.Row="1" Grid.Column="3"/>

                            <!--<Label Text="Date:" Grid.Row="0" Grid.Column="4"/>
                                <Label Text="{Binding PublichDate}" Grid.Row="1" Grid.Column="4"/>-->

                            <Label Text="Description:" Grid.Row="0" Grid.Column="4"/>
                            <Label Text="{Binding Description}" Grid.Row="1" Grid.Column="4"/>

                            <Label Text="Cartoon:" Grid.Row="0" Grid.Column="6"/>
                            <Label Text="{Binding Cartoon.Title}" Grid.Row="1" Grid.Column="6"/>


                        </Grid>
                            </Border>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
        

    </Grid>
</ContentPage>