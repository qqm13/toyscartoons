<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toyscartoons.NewPage2"
             Title="Add Cartoon">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*,Auto,Auto, auto" ColumnDefinitions="*,*,*" Padding="10" BackgroundColor="Yellow"> 
        <Label Text="Введите название Мультсериала" Grid.Row="0" Grid.ColumnSpan="3" Margin="13,0,10,10" FontSize="16" />
        <Entry Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,20,0" Text="{Binding CartoonHere.Title}"/>
        <Label Text="Введите описание Мультсериала" Grid.Row="2" Grid.ColumnSpan="3" Margin="13,0,10,10" FontSize="16"/>
        <Entry Grid.Row="3" Grid.ColumnSpan="2" Margin="10,0,20,0" Text="{Binding CartoonHere.Description}"/>
        <Label Text="Введите дату выпуска Мультсериала" Grid.Row="4" Grid.ColumnSpan="3" Margin="13,0,10,10" FontSize="16"/>
        <DatePicker Grid.Row="5" Grid.ColumnSpan="2" Margin="10,0,20,0" Date="{Binding CartoonHere.YearPubliched}"/>
        <Label Text="Введите жанр Мультсериала" Grid.Row="6" Grid.ColumnSpan="2" Margin="13,0,10,10" FontSize="16"/>
        <Entry Grid.Row="7" Grid.ColumnSpan="2 " Margin="10,0,20,0" Text="{Binding CartoonHere.Genre}"/>
        <Label Text="Введите автора Мультсериала" Grid.Row="8 " Grid.ColumnSpan="2" Margin="13,0,10,10" FontSize="16"/>
        <Entry Grid.Row="9" Grid.ColumnSpan="2"  Margin="10,0,20,0" Text="{Binding CartoonHere.Author}"/>
        <Button Grid.Row="10"  Text="Save" Clicked="Save" FontSize="16" Margin="100,20,-150,0" BackgroundColor="DarkOrange"/>

        <Entry Grid.Row="12" Grid.ColumnSpan="1"  Margin="150,0,-100,0" Text="{Binding DeleteId}"/>
        <Button Grid.Row="13" Text="Delete" Clicked="Deleted" FontSize="16" Margin="100,20,-150,0" BackgroundColor="DarkOrange"/>
        <Button Grid.Row="14" Text="Update" Clicked="Update" FontSize="16" Margin="100,20,-150,0" BackgroundColor="DarkOrange"/>

        <ListView ItemsSource="{Binding Cartoons}" Grid.Row="11" Grid.ColumnSpan="3" HasUnevenRows="True" Margin="0,30,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Border Margin="10" Padding="15" BackgroundColor="GreenYellow"  >
                            <Grid ColumnDefinitions="Auto,Auto,Auto,*,*,Auto" RowDefinitions="Auto, *,*">

                                <Label Text="Id:" Grid.Row="0" Grid.Column="0"/>
                                <Label Text="{Binding Id}" Grid.Row="1" Grid.Column="0"/>

                                <Label Text="Title:" Grid.Row="0" Grid.Column="1"/>
                                <Label Text="{Binding Title}" Grid.Row="1" Grid.Column="1"/>

                                <Label Text="Description:" Grid.Row="0" Grid.Column="2"/>
                                <Label Text="{Binding Description}" Grid.Row="1" Grid.Column="2"/>

                                <Label Text="Year Published:" Grid.Row="0" Grid.Column="3"/>
                                <Label Text="{Binding YearPubliched}" Grid.Row="1" Grid.Column="3"/>

                                <Label Text="Genre:" Grid.Row="0" Grid.Column="4"/>
                                <Label Text="{Binding Genre}" Grid.Row="1" Grid.Column="4"/>

                                <Label Text="Author:" Grid.Row="0" Grid.Column="5"/>
                                <Label Text="{Binding Author}" Grid.Row="1" Grid.Column="5"/>

                            </Grid>
                        </Border>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</ContentPage>