<?xml version="1.0" encoding="utf-8" ?>
    <ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toyscartoons.MainPage">
        
    <ContentView Margin="10">
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*,*" Padding="10" BackgroundColor="AliceBlue">
            <Button Text="ShowItem" Clicked="Button_Clicked_Programm" Grid.Column="1" Grid.Row="1" Margin="0,200,0,10" BackgroundColor="Navy"/>
            <Button Text="Add Cartoon"  Clicked="Button_Clicked_AddCartoon" Grid.Column="1" Grid.Row="2" Margin="0,10,0,10" BackgroundColor="Navy"/>
            <Button Text="Add Toy" Clicked="Button_Clicked_AddToy" Grid.Column="1" Grid.Row="3" Margin="0,10,0,10" BackgroundColor="Navy"/>
        </Grid>
    </ContentView>
   
   
</ContentPage>
