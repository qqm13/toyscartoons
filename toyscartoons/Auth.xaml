<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toyscartoons.Auth"
             Title="Auth">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*,Auto,Auto" ColumnDefinitions="*,*,*" Padding="10" BackgroundColor="AliceBlue"    >
        <Label Text="Введите логин пользователя" Grid.Row="0" Grid.ColumnSpan="3" Margin="13,0,10,10" FontSize="16" />
        <Entry Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,20,0" Text="{Binding UserHere.Login}"/>
        <Label Text="Введите пароль" Grid.Row="2" Grid.ColumnSpan="3" Margin="13,0,10,10" FontSize="16"/>
        <Entry Grid.Row="3" Grid.ColumnSpan="2" Margin="10,0,20,0" Text="{Binding UserHere.Password}"/>


        <Button Grid.Row="4" Text="Autho" Clicked="Autho" FontSize="16" Margin="100,20,-150,0" BackgroundColor="DodgerBlue"/>
        <Button Grid.Row="5" Text="Registration" Clicked="Registration" FontSize="16" Margin="100,20,-150,0" BackgroundColor="Fuchsia"/>


    </Grid>
</ContentPage>